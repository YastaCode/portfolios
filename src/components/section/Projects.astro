---
import Section from "../Section.astro";
import {projects} from "../../pages/minimalist/cv.json";

---

<Section title="Projects">
    <ul>
        {projects.map(({name,isActive,description,highlights,url}) => {
            return (
                <li>
                    <article>
                        <header>
                            <h3>
                                <a href={url} title="Watch project">
                                    {name}
                                </a>    
                                {
                                    isActive && <span>&bull;</span>
                                }
                            </h3>
                            
                        </header>
                        <p>{description}</p>
                        <footer>
                            {highlights.map((highlight) => {
                                return <span>{highlight}</span>
                            })}
                        </footer>
                    </article>
                </li>
            )
        })}
    </ul>
</Section>

<style>
    ul{
        /* border: 1px solid red; */
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem; 
    }
    article{
        border: 1px solid #e2e2e2;
        border-radius: 0.6rem;
        height: 100%;
        padding: 16px;
        display: flex;
        flex-direction: column;
        gap: 0.8rem; 
    }
    a{
        color: #111;
        transition: .3s ease;
    }
    a:hover{
        text-decoration: underline;
    }
    h3{
        margin-bottom: 4px;
    }
    h3 span{
        color: rgb(0,188,74);
    }
    p{
        flex: 1;
        font-size: 0.75rem;
        line-height: 1.2rem;
        padding-bottom: 4px;
    }
    footer{
        font-size: 0.7rem; 
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }
    footer span{
        background: #eee;
        padding: 0.2rem 0.6rem; 
        font-weight: 500;
        color: black;
    }
</style>