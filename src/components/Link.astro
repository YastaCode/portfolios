---
const {href, title, urlImg} = Astro.props;
---

<a 
    href={href} 
    title={title} 
    class="link"
>
    <div class="header-link">
        <slot />
    </div>
    <div class="body-link">
        <img src={urlImg} alt="">
    </div>
</a>

<style>
    .link{
        background: #f5f5f5;
        border: 1px solid #e5e5e5
;       border-radius: 0.5rem;
        width: 100%;
        height: auto;
        padding: 0.6rem;
        display: block;
    }
    .header-link{
        display: flex;
        justify-content: center;
        align-items: center;
        line-height: 2.5;
    }
    .body-link{
     
        border-radius: 0.5rem;
        width: 100%;
        height: 100%;
    }
    img{
        width: 100%;
        border: 1px solid #e1e1e1;
        border-radius: 0.5rem;
    }
</style>