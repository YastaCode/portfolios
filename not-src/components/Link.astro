---
const {url,name,urlImg,isActive} = Astro.props;
---

<div class="link">
    <div class="header">
        <h3><a href={url}>{name}</a></h3>
        <box-icon name='radio-circle-marked' color={isActive}></box-icon>
    </div>
    <div class="body">
        <a href={url}>
            <img src={`${urlImg}`} alt={name} width="500">
        </a>
    </div>
</div>
<style>
    .link{
        background: #f5f5f5;
        border: 1px solid #e5e5e5;       
        border-radius: 0.5rem;
        padding: 0.5rem 0.8rem;
    }
    .header{
        display: flex;
        justify-content: start;
        align-items: center;
        padding: 1rem 0;
        padding-top: 0.5rem;
    }
    img{
        width: 100%;
        border: 1px solid #e1e1e1;
        border-radius: 0.5rem;
        animation: flipInX;
        animation-duration: 2s;
    }
    img:hover{
        filter: sepia(60%);
    }
    h3{
        animation: fadeInUp;
        animation-duration: 2s;
    }
    a{
        font-weight: 100;
    }
</style>