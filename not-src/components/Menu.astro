---
import {projects} from "../json/cv-en.json";
import Link from "../components/Link.astro";

const menu = projects;
---

<div class="menu-link">
    {
        menu.map((item) => 
            <Link 
                name={item.name} 
                urlImg={item.urlImg} 
                url={item.url}
                isActive={item.isActive}
            />
        )
    }
</div>

<style>
    .menu-link{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(10rem,18rem));
        justify-content: center;
        grid-gap: 1rem;
    }
</style>